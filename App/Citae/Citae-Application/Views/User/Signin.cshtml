@model Citae_Application.Models.Usuario

<div id="user-box-edit">
    @using (Html.BeginForm("Signin", "User", FormMethod.Post, new { @id = "user-edit-form", @class = "signin-form" }))
    {
        @if (ViewBag.Error != null) {
            <span> @ViewBag.Error </span>
        }
        @Html.TextBoxFor(p => p.nome, new { @placeholder = "Nome" })
        @Html.TextBoxFor(p => p.email, new { @type = "email", @placeholder = "Email" })
        @Html.TextBoxFor(p => p.senha, new { @type = "password", @placeholder = "Senha" })
        <input type="submit" value="CRIAR CONTA">
    }
</div>
