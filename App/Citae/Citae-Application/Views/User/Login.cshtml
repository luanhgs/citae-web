@model Citae_Application.Models.Usuario

<div id="user-box-edit">
    <img src="../../Assets/img/icons/citaê.svg" alt="" srcset="">
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @id = "user-edit-form" }))
    {
        @Html.TextBoxFor(model => model.email, new { @type = "email", @placeholder = "Email" })
        @Html.TextBoxFor(model => model.senha, new { @type = "password", @placeholder = "Senha" })
        if (ViewBag.ErrorLogin != null)
        {
            <span> @ViewBag.ErrorLogin </span>
        }
        <input type="submit" value="LOGIN">
        <a href="@Url.Action("Signin", "User")">CADASTRE-SE</a>
    }
</div>

